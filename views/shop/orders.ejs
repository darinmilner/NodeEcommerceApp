<body>
    <%- include("../includes/navigation.ejs") %>
    <main>
        <% if(orders.length <= 0) { %>
            <h1>No Orders yet!</h1>
        <%} else {%>
            <ul class="orders">
                <% orders.forEach(order => { %>
                    <li class="orders_item"> 
                        <h1>Order # <%= order._id %></h1>
                        <ul>
                            <% order.items.forEach(product => { %>
                                <li>
                                    <%= product.title %> (<%= product.quantity %>)
                                </li>
                           <% }) %>
                            
                        </ul>
                    </li>
                <%})%>
            </ul>
        <%}%>
      
    </main>
    <%- include("../includes/end.ejs") %>